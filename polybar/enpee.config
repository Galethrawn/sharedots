[colors]
foreground = #ffffff
background = #141415
modb = #141415
modb1 = #191A29
modb2 = ${xrdb:color6}
accent_1 = ${xrdb:color9}
accent_2 = ${xrdb:color1}
accent_3 = ${xrdb:color2}

[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = true

[bar/top]
monitor = eDP1
width = 100%
height = 35
offset-x = 0%
offset-y = 0

locale = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Iosevka Nerd Font:size=8:antialias=true;1
;font-1 = MaterialIcons-Regular :size=10:;
font-1 = icomoon :size=11:;1
font-2 = MaterialIcons:size=10:antialias=false;2

modules-left = date1 volume cpu weather
modules-center = mpd
modules-right = powermenu

tray-position = off
tray-padding = 2
tray-transparent = false
tray-detached = false
tray-background = ${colors.modb}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>

format-volume-background = ${colors.modb}
format-volume-padding = 2

module-margin-right = 0
ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =
ramp-volume-3 =
ramp-volume-foreground = #1AACB5


label-muted =  muted


[module/powermenu]
type = custom/menu

label-open =
label-open-foreground = #0099cc
label-open-background = #161618
label-open-padding = 2
label-close =
label-close-padding = 1
label-close-foreground = $[colors.accent_3]
label-separator = |
label-separator-foreground = #666666

menu-0-0 =
menu-0-0-exec = menu-open-1
menu-0-1 =
menu-0-1-exec = menu-open-2
menu-0-2 =
menu-0-2-exec = menu-open-3

menu-1-0 =
menu-1-0-exec = menu-open-0
menu-1-1 =
menu-1-1-exec = menu-1-1-exec = rofi -modi colorscheme:rofi-colorscheme-switch  -show colorscheme:rofi-colorscheme-switch

menu-2-0 =
menu-2-0-exec = atom
menu-2-1 =
menu-2-1-exec = menu-open-0

menu-3-0 =
menu-3-0-exec = rofi -modi drun,run,colorscheme:rofi-colorscheme-switch,keys,ssh,combi -show drun -sidebar-mode -font "NeuzeitGro-Reg 13 "
menu-3-1 =
menu-3-1-exec = menu-open-0

[module/play]
type = custom/script
exec = /home/pringle/.config/polybar/Play-dark.sh
format-padding = 1
interval = 2
format = <label>
format-foreground = ${colors.foreground}
;format-background = ${colors.foreground-alt}
click-left = playerctl play

[module/previous]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = exec playerctl previous
format-foreground = ${colors.accent_2}
format-background = ${colors.modb1}
format-padding = 2

[module/next]
type = custom/script
format-text = <label>
label = 
exec = echo label
click-left = exec playerctl next
format-foreground = ${colors.accent_2}
format-background = ${colors.modb1}
format-padding = 2

[module/date1]
type = internal/date
interval = 1
date = " %I:%M"
format-prefix = 
format-prefix-foreground = #1A80B5
format-background = ${colors.modb}
format-padding = 2


[module/spotipy]
type = custom/script
exec =  python3 ~/scripts/spoti.py
exec-if = pgrep spotify > /dev/null
interval = 0.01
click-left = playerctl -p spotify play-pause
format-foreground = ${colors.accent_2}
format-background = ${colors.modb1}
format-padding = 2

[module/music2]
type = custom/script
interval = 2
label = %output:0:305:...%
label-padding = 1
exec = ~/.config/polybar/mpris.sh



[module/cpu]
type = internal/cpu
label = %percentage-core1%%
format-prefix = " "
format-prefix-foreground = #1AADB5
format-background = ${colors.modb}
format-padding = 2

[module/weather]
type = custom/script
interval = 10
format = <label>
format-padding = 2
format-prefix = " "
format-suffix = "°C"
format-prefix-foreground = #039BE5
format-background = ${colors.modb}
exec = /home/pringle/.config/polybar/weather

[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true
format-padding = 1
Additional formatting
icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
icon-5 = 6;
icon-6 = 7;
icon-7 = 8;
icon-8 = 9;
icon-9 = 10;
;icon-default = 

;

format = <label-state>
label-monitor =  %name%

label-active = " %icon% %name% "
label-active-foreground = ${xrdb:color13}
label-active-background = #color8 = ${xrdb:color8}
label-active-underline = #F5166A

label-occupied = " %icon% %name% "
label-occupied-underline = #EFC8AA
label-occupied-background = #f7f3ee
label-occupied-foreground = #34C8BC

label-urgent = " %icon% %name% "
label-urgent-foreground = #ffffff
label-urgent-background = #007086
label-urgent-underline = #34C8BC

label-empty = " %icon% %name% "
label-empty-foreground = #ffffff


[module/mpd]
type = internal/mpd
format-online = <bar-progress>  <icon-prev> <icon-stop> <toggle> <icon-next>  <label-song>
format-online-overline = ${root.background}
format-online-underline = ${root.background}
format-offline = <label-offline>
label-offline = mpd is off
format-online-prefix = " "

icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-random = 
icon-repeat = 

toggle-on-foreground =
toggle-off-foreground = #55

bar-progress-width = 35
bar-progress-format = %{+o +u}%fill%%{-o -u}%indicator%%{+o +u}%empty%%{-u -o}
; bar-progress-indicator = |
bar-progress-indicator = █
bar-progress-indicator-foreground = #1AACB5
bar-progress-indicator-font = 2
; bar-progress-fill = ─
bar-progress-fill = █
bar-progress-fill-foreground = #bb
bar-progress-fill-font = 2
; bar-progress-empty = ─
bar-progress-empty = ▒
bar-progress-empty-font = 2
bar-progress-empty-foreground = #44

